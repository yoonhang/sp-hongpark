{{>layouts/header}}

{{#article}}
<!--action: 어디로 보낼지 method: 어떻게 보낼지-->
<form class="container" action="/articles/update" method="post">
    <input name="id" type="hidden" value="{{id}}"/>
        <!-- id 값 전달해주기 위해서 (원래는 입력한 값만 보냈으니까)-->
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" class="form-control" name="title" value="{{title}}">
        <!--데이터 전송할 때, name 값에 DTO 랑 같은 객체 이름 적어줘야 함(private로 적어준거)-->
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" cols="30" rows="3" name="content">{{content}}</textarea>
        <!--데이터 전송할 때, name 값에 DTO 랑 같은 객체 이름 적어줘야 함(private로 적어준거)-->
    </div>
    <button type="submit" class="btn btn-primary">제출</button>

    <!-- 다시 article 목록으로 돌아가기 위해서 -->
    <a href="/articles/{{id}}">Back</a>
</form>
{{/article}}
{{>layouts/footer}}